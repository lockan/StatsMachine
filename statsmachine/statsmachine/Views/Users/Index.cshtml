@model IEnumerable<statsmachine.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            <span>&nbsp;</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roles)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.Image(modelItem => item.iconpath, null, null, new { height = "25", width = "25"})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.avatar)
        </td>      
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @foreach (var role in item.roles)
            {
                @Html.DisplayFor(modelItem => role) <span>&nbsp</span>
            } 
        </td>
        <td>
            @Html.ActionLink("Roles", "Roles", new { id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
